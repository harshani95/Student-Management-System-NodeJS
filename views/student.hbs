<br>
    <h1 style="display: flex; justify-content:center; color:rgb(39, 60, 117)">Student Management</h1><br>
  <a href="/new-student-form">
    <p class="d-inline-flex gap-1">
  <button type="button" class="btn btn-primary" data-bs-toggle="button">+ New Student</button>
</p>
  </a>
  <br>

  <form class="d-flex" role="search" action="" method="post">
        <input class="form-control me-2" name="text"
         type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
<br><br>

<table class="table-bordered table table-hover">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Full Name</th>
            <th>Address</th>
            <th>Contact no</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <td>{{this.student_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.contact}}</td>
            <td>
                <a href="#" class="btn btn-primary">Show Data</a>&nbsp;
                <a href="/delete-student/{{this.nic}}" class="btn btn-danger">Delete</a>&nbsp;
                <a href="/update-student/{{this.nic}}" class="btn btn-warning">Update</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<hr>
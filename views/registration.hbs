<br><h1 style="display: flex; justify-content:center; color:rgb(39, 60, 117)">New Registration</h1><br>

  <br>

  <form class="d-flex" role="search" action="" method="post">
        <input class="form-control me-2" name="text"
         type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
<br><br>

<table class="table-bordered table table-hover">
    <thead>
        <tr>
            <th>Registration ID</th>
            <th>Student</th>
            <th>Programe</th>
            <th>Payment</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.student}}</td>
            <td>{{this.programe}}</td>
            <td>{{this.payment}}</td>
            <td>
                <a href="#" class="btn btn-primary">Show Data</a>&nbsp;
                <a href="/delete-registration/{{this.id}}" class="btn btn-danger">Delete</a>&nbsp;
                <a href="/update-registration/{{this.id}}" class="btn btn-warning">Update</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<hr>
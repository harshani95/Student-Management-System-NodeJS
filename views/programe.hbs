<br>
<h1 style="display: flex; justify-content:center; color:rgb(39, 60, 117)">Programe Management</h1><br>

  <a class="nav-link" href="/programe/new-programe-form">
        <button class="btn btn-primary me-md-2" type="button">+ New Programe</button>
    </a>
        <br>

  <form class="d-flex" role="search" action="" method="post">
        <input class="form-control me-2" name="text"
         type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
<br>

<table class="table-bordered table table-hover">
    <thead>
        <tr>
            <th>Programe Code</th>
            <th>Programe Name</th>
            <th>Programe Cost</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <td>{{this.programe_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.cost}}</td>
            <td>
                <a href="/delete-student/{{this.programe_id}}" class="btn btn-danger">Delete</a>&nbsp;
                <a href="/update-student/{{this.programe_id}}" class="btn btn-warning">Update</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
